{
  "name": "tree-sitter-imp",
  "version": "0.1.0",
  "description": "Parser for the Imp language made for my matura project",
  "repository": "https://github.com/enmiligi/tree-sitter-imp",
  "license": "GPLv3",
  "author": {
    "name": "Enea Giger"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "type": "module",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "imp"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.2.1",
    "node-gyp-build": "^4.8.2"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.25.4"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js"
  },
  "tree-sitter": [
    {
      "scope": "source.imp",
      "file-types": [
        "imp"
      ],
      "injection-regex": "^imp$",
      "highlights": [
        "queries/highlights.scm"
      ],
      "locals": [
        "queries/locals.scm"
      ]
    }
  ]
}
